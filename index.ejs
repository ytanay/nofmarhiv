    }

    var units = {
        'garden-suite': {
            price: {
                regular: [690, 890],
                season: 1090
            },
            images: 4,
            sections: {
                'main-room': [
                    'double-bed',
                    'bathroom',
                    'balcony-jacuzzi',
                    'balcony',
                    'kitchenette-room'
                ],
                'small-room': [
                    '2-sleeper-sofas',
                    'tv-and-ac'
                ]
            }
        },  

        'family-suite': {
            price: {
                regular: [690, 890],
                season: 1090
            },
            images: 7,
            sections: {
                'lower-level': [
                    'double-jacuzzi',
                    'sofa-living-room',
                    'kitchenette-room'
                ],
                'upper-level': [
                    'fully-wooden'
                ]
            }
        },

        'couples-suite': {
            price: {
                regular: [790, 990],
                season: 1200
            },
            images: 5,
            sections: {
                'features': [
                    'balcony-jacuzzi',
                    'kitchenette-room'
                ]
            }
        },

        
        'family-cabin': {
            price: {
                regular: [790, 890],
                season: 1090
            },
            images: 7,
            sections: {
                'features': [
                    'sofa-living-room',
                    'bedroom-jacuzzi',
                    'balcony',
                    'kitchenette-cabin'
                ]
            }
        },
        'couples-family-cabin': {
            price: {
                regular: [590, 890, 1500],
                season: 990
            },
            images: 4,
            sections: {
                'features': [
                    'living-room-fireplace',
                    'balcony-jacuzzi',
                    'massaging-shower',
                    'kitchenette-cabin'
                ]
            }
        },
        'couples-vacation-apartment': {
            price: {
                regular: [400, 500],
                season: 500
            },
            images: 1,
            sections: {
                'Features': [
                    'single-jacuzzi',
                    'panoramic-balcony',
                    'kitchenette-room'
                ]
            }
